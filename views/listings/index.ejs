<% layout("/layouts/boilerplate") -%>
<body>
    <h3>All Listings</h3>
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
      <!-- this is shift to navbar add listing option -->
    <div class="row row-cols-lg-3 row-cols-sm-2">
        <% for(let listing of allListings) { %>
            <a href="/listings/<%=listing._id%>" class="link">
                <div class="card col">
                    <img src="<%=listing.image.url%>" style="height: 20rem;" class="card-img-top" alt="listing-image">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"><b>
                                <%=listing.title%>
                            </b><br>
                            &#x20B9;<%=listing.price.toLocaleString("en-IN")%> / night
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>
</body>


